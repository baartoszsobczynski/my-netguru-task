#show_product

  = link_to "Back", category, class: "btn btn-default btn-lg glyphicon glyphicon-chevron-left"

  #product_box
    #title
      =product.title

    #price
      ="Price: #{product.price}$"

    #category
      ="Product from category: #{link_to product.category.name, category}".html_safe

    #description
      =product.description

    #created_at
      =product.created_at

    #added_by
      - user = User.find(product.user_id)
      ="Added by: #{link_to user.full_name, user_path(user)}".html_safe